#!/bin/sh

### BEGIN INIT INFO
# Provides:          phd
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Wrapper around the Phabricator Daemon launcher.
### END INIT INFO

NAME="phd"
DAEMON="<%= scope.lookupvar('phabricator::config::base_dir') %>/phabricator/bin/$NAME"
DESC="Phabricator Daemon launcher"

# Exit if the package is not installed.
test -x "$DAEMON" || exit 0

# Load the VERBOSE setting and other rcS variables.
. /lib/init/vars.sh

# Define LSB log_* functions.
. /lib/lsb/init-functions

RETVAL=0
case "$1" in
    start)
        [ "$VERBOSE" != no ] && log_daemon_msg "Starting $DESC" "$NAME"
        "$DAEMON" start
        RETVAL="$?"
        case "$?" in
            0) [ "$VERBOSE" != no ] && log_end_msg 0 ;;
            1) [ "$VERBOSE" != no ] && log_end_msg 255 ;; # Already started
            *) [ "$VERBOSE" != no ] && log_end_msg 1 ;; # Failed to start
        esac
        ;;
    launch)
        i=2; while [ "$i" -le $# ]; do
            [ "$VERBOSE" != no ] && log_daemon_msg "Launching $DESC" "$NAME" "$(eval echo \$$i)"
            "$DAEMON" launch "$(eval echo \$$i)"
            RETVAL="$?"
            case "$?" in
                0) [ "$VERBOSE" != no ] && log_end_msg 0 ;;
                1) [ "$VERBOSE" != no ] && log_end_msg 255 ;; # Already started
                *) [ "$VERBOSE" != no ] && log_end_msg 1 ;; # Failed to start
            esac
            i=$(($i+1))
        done
        ;;
    stop)
        [ "$VERBOSE" != no ] && log_daemon_msg "Stopping $DESC" "$NAME"
        "$DAEMON" stop
        RETVAL="$?"
        case "$?" in
            0) [ "$VERBOSE" != no ] && log_end_msg 0 ;;
            *) [ "$VERBOSE" != no ] && log_end_msg 1 ;; # Failed to stop
        esac
        ;;
    status)
        "$DAEMON" status && exit 0 || exit $?
        ;;
    list)
        "$DAEMON" list && exit 0 || exit $?
        ;;
    restart)
        log_daemon_msg "Restarting $DESC" "$NAME"
        "$DAEMON" restart
        RETVAL="$?"
        case "$?" in
            0) log_end_msg 0 ;;
            *) log_end_msg 1 ;; # Failed to restart
        esac
        ;;
    *)
        echo "Usage: /etc/init.d/$NAME {start|launch|stop|status|list|restart}"
        exit 1
        ;;
esac

exit "$RETVAL"
